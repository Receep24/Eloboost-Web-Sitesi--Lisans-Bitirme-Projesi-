<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: black; color:white; padding:10px; font-size:18px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FRF ELOBOOST", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                
            </div>
            <div class="navbar-collapse collapse">
               
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a href="@Url.Action("Index","Eloobosters")">Elobooster Listele</a></li>
                        <li><a href="@Url.Action("Index","Customers")">Müşterileri Listele</a></li>
                        <li><a href="@Url.Action("Adminİlan","Adverts")">İlan Listele</a></li>
                        <li><a href="@Url.Action("Index","Comments")">Yorum Listele</a></li>
                        <li><a href="@Url.Action("Index","Meetings")">Randevu Listele</a></li>

                    }

                    @if (User.IsInRole("Musteri"))
                    {
                        <li><a href="@Url.Action("Index", "Comments")">Yorum Yap</a></li>
                    }

                    @if (User.IsInRole("Elobooster"))
                    {
                        <li><a href="@Url.Action("Index", "Adverts")">İlanları Listele</a></li>
                    }




                    <li><a href="/Kullanicilar/Logout">Çıkış</a></li>
                    <li><a class="navbar-link px-lg-4" style="color:white">@User.Identity.Name</a></li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:whitesmoke;">&copy; @DateTime.Now.Year -  FRF ELOBOOST</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

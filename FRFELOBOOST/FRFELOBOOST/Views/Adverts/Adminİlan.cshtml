@model IEnumerable<FRFELOBOOST.Models.Adverts>
@{
    ViewBag.Title = "Adminİlan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İlan Listesi</h2>

<table class="table">
    <tr>
        <th>
            <p>İlan Başlığı</p>
        </th>
        <th>
            <p>İlan Tarihi</p>
        </th>
        <th>
            <p>Elobooster Nick</p>
        </th>
        <th>
            <p>Oyun Adı</p>
        </th>
        <th>
            <p>Kume Aralığı</p>
        </th>
        <th>Detaylar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdvertTitle)
            </td>
            <td>
                @Convert.ToString(string.Format("{0:dd-MMMM-yyyy}", item.AdvertDate))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Elooboster.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Games.GamesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ranks.RankName)
            </td>
            <td>
                
                <a class="btn btn-primary" href="@Url.Action("Details", "Adverts", new { id= item.AdvertsID})">Detayı Gör</a>
                <a class="btn btn-danger" href="@Url.Action("Delete", "Adverts", new { id= item.AdvertsID})">Sil</a>
            </td>
        </tr>
    }

</table>

@model FRFELOBOOST.Models.Elooboster

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MusteriLayout.cshtml";
    <title>Elobooster Ol</title>
    <link href="~/Content/elobooster_kayit.css" rel="stylesheet" />
}

<div class="container">
    <div class="kayit-alan1">
        <div class="booster_basvuru">
            <br />

            <h1>Ailemizin bir uyesi olun. </h1>
            <p>

                Bu kısımdan sitemize booster başvurusunda bulunabilirsiniz.
                Başvuruyu yaparken istenilen bilgileri eksiksiz girerek booster basvurusu yapabilirsiniz.

            </p>
        </div>
    </div>
    <div class="kayit-alan2">
        <div class="alan2sol">
            <div class="form_baslik">
                <br />
                <br />
            </div>
            <div class="elo_kayit">
                <br />
                <h2>Elobooster Kayıt Formu</h2>
                <div class="elo_form">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()




                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="kullanici-adi">


                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "txt", placeholder = "  Kullanıcı adınızı giriniz.", required = "required" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })

                        </div>

                        <div class="kullanici-adi">


                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "txt", placeholder = "  Sifrenizi giriniz.", required = "required" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

                        </div>

                        <div class="kullanici-adi1">


                            @Html.EditorFor(model => model.usertype, new { htmlAttributes = new { @class = "txt", @Value = "elobooster" } })
                            @Html.ValidationMessageFor(model => model.usertype, "", new { @class = "text-danger" })

                        </div>

                        <div class="kullanici-adi">


                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "txt", placeholder = "  Adınızı giriniz.", required = "required" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                        </div>

                        <div class="kullanici-adi">


                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "txt", placeholder = "  Soyadınızı giriniz.", required = "required" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                        </div>

                        <div class="kullanici-adi">


                            @Html.DropDownList("GenderID", null, htmlAttributes: new { @class = "txt" })
                            @Html.ValidationMessageFor(model => model.GenderID, "", new { @class = "text-danger" })

                        </div>

                        <div class="kullanici-adi">


                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "txt", placeholder = "  e-Mail adresinizi giriniz.", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        </div>

                        <div>
                            <div class="buton-yonet">
                                <input type="submit" value="Elobooster Ol" class="button1" />
                            </div>
                        </div>

                    }


                </div>


            </div>

        </div>
        <div class="alan2sag">
            <img src="~/Content/img/BEYAZ.png" />
        </div>
    </div>
    <div class="kayit-alan3">
        <div class="kayit-alan3foto1">
            <img src="~/Content/img/dianaa2.png" />

        </div>
        <div class="kayit-alan3yazi">
            <div class="yazilar">
                <br />
                <br />
                <br />
                <h3>Bizi tercih ettiğiniz için teşekkur ederiz.</h3>
                <br />
                <p>
                    FRF Eloboost ailesi olarak sizlere, <br /> Türkiye Elo Boost
                    sektöründe en iyi hizmeti en uygun fiyatlarla sunmayı garanti ediyoruz.<br />
                    İşimizi tam profesyonel olarak yapmanın yanı sıra yasal olarak yapıyoruz.<br />
                    Profesyonel boosting hizmetini sizlerin vermesini istiyoruz<br />
                    ve sizi ailemize dahil ediyoruz.
                </p>

            </div>
        </div>
        <div class="kayit-alan3foto2">
            <img src="~/Content/img/ters-diana.png" />

        </div>

    </div>


</div>





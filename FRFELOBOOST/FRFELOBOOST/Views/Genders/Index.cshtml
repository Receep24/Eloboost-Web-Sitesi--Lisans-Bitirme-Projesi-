@model IEnumerable<FRFELOBOOST.Models.Genders>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success"  href="@Url.Action("Create", "Genders")">Cinsiyet Oluştur</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenderName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GenderName)
        </td>
        <td>
            <a class="btn btn-warning" href="@Url.Action("Edit", "Genders", new { id= item.GenderID})">Güncelle</a>
            <a class="btn btn-primary"  href="@Url.Action("Details", "Genders", new { id= item.GenderID})">Detay</a>
            <a class="btn btn-danger"  href="@Url.Action("Sil", "Genders", new { id= item.GenderID})">Sil</a>

        </td>
    </tr>
}

</table>

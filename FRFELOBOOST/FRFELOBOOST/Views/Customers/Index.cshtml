@model IEnumerable<FRFELOBOOST.Models.Customers>

@{
    ViewBag.Title = "Müşteriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Müşteri Listesi</h2>


<table class="table">
    <tr>
        <th>
            <p>Kullanıcı Adı</p>
        </th>
        <th>
            <p>Sifre</p>
        </th>
        <th>
            <p>usertype</p>
        </th>
        <th>
            <p>Ad</p>
        </th>
        <th>
            <p>Soyad</p>
        </th>
        <th>
            <p>E-Mail</p>
        </th>
        <th>
            <p>Telefon</p>
        </th>
        <th>
            <p>Cinsiyet</p>
        </th>
        <th> Detaylar</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usertype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genders.GenderName)
        </td>
        <td>
            
            <a class="btn btn-primary" href="@Url.Action("Details", "Customers", new { id= item.CustomerID})">Detayı Gör</a>
            <a class="btn btn-danger" href="@Url.Action("Delete", "Customers", new { id= item.CustomerID})">Sil</a>
        </td>
    </tr>
}

</table>
